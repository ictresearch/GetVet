<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/prev_icon_64"
                android:scaleType="fitCenter"
                android:background="#2b005c"
                android:padding="10dp"
                android:id="@+id/imgBack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#2b005c"
                android:text="@string/title_catken_search1"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="fill_vertical"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:background="#2b005c"
                android:padding="10dp"
                android:id="@+id/imgHome" />
        </TableRow>
    </TableLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="80dp"
            android:id="@+id/lymain">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="0">

                <TableRow>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/lnlSearch">

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/round_edit_search"
                            android:textColor="#2b005c"
                            android:textSize="15sp"
                            android:gravity="center|left"
                            android:layout_gravity="fill_vertical"
                            android:id="@+id/eSearch"
                            android:hint="Type Cattery Or Kennel here."
                            android:paddingLeft="10dp"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:textStyle="bold" />

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/round_edit_search"
                            android:textColor="#2b005c"
                            android:textSize="@dimen/text_size"
                            android:gravity="center|left"
                            android:layout_gravity="fill_vertical"
                            android:id="@+id/eSearchJasa"
                            android:hint="Type cat &amp; dog here."
                            android:paddingLeft="10dp"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"/>

                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/round_edit_search"
                            android:textColor="#2b005c"
                            android:textSize="@dimen/text_size"
                            android:gravity="center|left"
                            android:layout_gravity="fill_vertical"
                            android:id="@+id/eSearchAlamat"
                            android:hint="Type location here..."
                            android:paddingLeft="10dp"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@drawable/round_btn_search"
                        android:cropToPadding="false"
                        android:baselineAlignBottom="false"
                        android:text="Search"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:id="@+id/btnSearch"
                        android:textSize="@dimen/button_text_size" />
                </TableRow>

                <TableRow>
                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/down_icon"
                        android:scaleType="fitCenter"
                        android:background="@drawable/round_edit"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/imgDown"
                        android:layout_span="2" />
                </TableRow>

                <TableRow android:layout_marginTop="5dp">

                    <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:divider="#e64c65"
                        android:dividerHeight="1dip"
                        android:footerDividersEnabled="true"
                        android:id="@+id/lvSearch"
                        android:layout_span="2">
                    </ListView>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:id="@+id/imgBanner"/>

    </FrameLayout>
</LinearLayout>