<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/prev_icon_64"
                android:scaleType="fitCenter"
                android:background="#2b005c"
                android:padding="10dp"
                android:id="@+id/imgBack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#2b005c"
                android:text="THREAD DETAILS"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="fill_vertical"
                android:textColor="#ffffff"
                android:textSize="@dimen/title_text_size" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:background="#2b005c"
                android:padding="10dp"
                android:src="@drawable/home_icon_64"
                android:id="@+id/imgHome" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:padding="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamaUser"
                android:textColor="#2b005c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDate"
                android:textColor="#e64c65"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textSize="@dimen/text_size"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvJudul"
                android:textColor="#2b005c"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:text="Title"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"/>

            <ImageView
                android:layout_height="180dp"
                android:layout_width="fill_parent"
                android:scaleType="fitCenter"
                android:id="@+id/imgKlinik" />

            <TextView
                android:id="@+id/tvIsi"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/btnviewCom"
                android:background="@drawable/round_btn_view_com"
                android:text="VIEW COMMENT"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">


        <EditText
            android:id="@+id/edtComment"
            android:background="@drawable/round_btn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:hint="Add Comment"
            android:textSize="@dimen/text_size"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:paddingLeft="5dp"/>
    </LinearLayout>
</LinearLayout>
